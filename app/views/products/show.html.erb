<%= image_tag @product.photo, width: '100%' if @product.photo.attached? %>

<h1 class="title"><%= @product.title %></h1>
<p class="description"><%= @product.description %></p>
<span class="price"><%= @product.price %>$</span>

<br>

<% if @product.user == Current.user %>
  <%= link_to t('.edit_product'), edit_product_path(@product) %> |
  <%= link_to t('.delete_product'), product_path(@product), data: { turbo_method: :delete, turbo_confirm: t('common.confirm') } %>
<% end %>
